<h2>Your Dashboard</h2>
<button id="new-post-btn">New Post</button>
<div id="new-post-form" style="display: none;">
    <h2>Create New Post</h2>
    <form class="new-post-form">
        <label for="post-title">Title</label>
        <input type="text" id="post-title" name="title" required>
        <label for="post-content">Content</label>
        <textarea id="post-content" name="content" required></textarea>
        <button type="submit">Create</button>
    </form>
</div>
<div class="post-container">
    {{#each posts}}
        <div class="post-card" data-id="{{this.id}}">
            <h2>{{this.title}}</h2>
            <p>{{this.content}}</p>
            <div class="post-footer">
                <span class="comment-icon">
                    <i class="fas fa-comments"></i> {{this.comments.length}}
                </span>
                <button type="button" data-id="{{this.id}}" class="edit-post-btn">Edit</button>
                <button type="button" data-id="{{this.id}}" class="delete-post-btn">Delete</button>
            </div>
            <form id="edit-form-{{this.id}}" class="edit-form" style="display: none;">
                <label for="title-{{this.id}}">Title</label>
                <input type="text" id="title-{{this.id}}" name="title" value="{{this.title}}">
                <label for="content-{{this.id}}">Content</label>
                <textarea id="content-{{this.id}}" name="content">{{this.content}}</textarea>
                <button type="button" data-id="{{this.id}}" class="save-post-btn">Save</button>
            </form>
        </div>
    {{/each}}
</div>