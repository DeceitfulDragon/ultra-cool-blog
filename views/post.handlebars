<article class="post-card">
    <h2>{{title}}</h2>
    <p>by {{user.username}} on {{format_date createdAt}}</p>
    <p>{{content}}</p>
</article>
<section>
    <h3>Comments</h3>
    {{#each comments}}
        <div class="comment-card">
            <p>{{this.user.username}} said on {{format_date this.createdAt}}:</p>
            <p>{{this.content}}</p>
        </div>
    {{/each}}
    {{#if logged_in}}
        <form class="comment-form">
            <label for="comment-content">Add a Comment</label>
            <textarea id="comment-content" name="content" required></textarea>
            <button type="submit">Submit</button>
        </form>
    {{else}}
        <p>You must be <a href="/login">logged in</a> to comment.</p>
    {{/if}}
</section>
